{
  "name": "@backend/podcast-service",
  "private": true,
  "version": "0.1.1",
  "description": "fetch podcasts",
  "main": "src",
  "repository": "https://github.com/awslabs/aws-sam-cli/tree/develop/samcli/local/init/templates/cookiecutter-aws-sam-hello-nodejs",
  "author": "SAM CLI",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "sam local start-api",
    "deploy:package": "sam package --output-template-file packaged.yaml --s3-bucket $LAMBDA_BUCKET",
    "deploy:aws": "aws cloudformation deploy --template-file packaged.yaml --stack-name $DEPLOYED_STACKNAME --capabilities CAPABILITY_IAM",
    "deploy": "npm run deploy:package && npm run deploy:aws",
    "remove": "aws cloudformation delete-stack --stack-name $REMOVED_STACKNAME"
  }
}
